---
interface Props {
    icon: string;
    title: string;
    text: string;
}

const { icon, title, text } = Astro.props
---

<div class="card">
    <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
        <use href={ "../images/" + icon + "#Vector"}>
    </svg>
    <h6>{ title }</h6>
    <p>{ text }</p>
</div>

<style>
    .card {
        background-color: #ebebeb;
        padding: 45px 39px;
        border-radius: 20px;
        transition: all .5s;
        h6 {
            margin: 30px 0;
            color: var(--color-primary-03);
            transition: all .5s;
        }
        svg {
            transition: all .5s;
        }
    }
    .card:hover {
        background-color: var(--color-primary-03);
        color: white;
        h6 {
            color: white;
        }
        svg {
            color: var(--color-primary-01);
        }
    }
</style>